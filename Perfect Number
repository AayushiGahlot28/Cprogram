*******************************************************************************/
/*For example, 6 is a perfect number.
The divisors of 6 are 1, 2 and 3.
1 + 2 + 3 = 6.*/
//******************************************************************************
#include <stdio.h>

int main()
{
    int num,sum,i;
    scanf("%d",&num);
    for(i=1;i<num;i++)
    {
        if(num%i==0)
        sum=sum+i;
    }
    printf("%d",sum);
    return 0;
}

